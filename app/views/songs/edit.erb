<h1>Add a New Song</h1>

<form action="/songs/<%=@song.slug%>/edit" method="POST">
  <label> Song Name </label>
  <input type="text" name="Name" value="<%=@song.name%>"> </br>

  <label for="Artist Name">Artist Name</label>
  <input type="text" name="artist_name" id="Artist Name" value="<%=@song.artist.name%>"> </br>

  <label> Genres </label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <% end %>

  <input type="submit" value="Save">
  <input type="hidden" value="patch" name="_method" id="hidden">
</form>